#!/bin/sh

### BEGIN INIT INFO
# Provides:          node-red
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start Node-RED at boot time
# Description:       Start Node-RED service.
### END INIT INFO

DAEMON="/usr/bin/node-red"
DAEMON_OPTS="--max-old-space-size=64"
NAME=node-red
DESC="Node-RED service"
VARDIR=/var/lib/node-red
PIDFILE=$VARDIR/$NAME.pid
USER=node-red

start() {
    if [ -f $PIDFILE ]; then
        pid=$(cat $PIDFILE)

        if [ -d /proc/$pid ]; then
            if [[ "$(cat /proc/$pid/comm)" = "node-red" || "$(cat /proc/$pid/comm)" = "node" ]]; then
                echo "$DESC: $NAME($pid) is already running."
                exit 0
            fi
        fi

        pid="`pidof node-red`"
        if [[ "$pid" ]]; then
            echo "$pid" > $PIDFILE
            echo "$DESC: $NAME($pid) is already running."
            exit 0
        fi
        rm -f $PIDFILE
    fi

    echo "Starting $DESC: $NAME"
   
    start-stop-daemon -S -q -m -b -p $PIDFILE -c $USER -x $DAEMON -- $DAEMON_OPTS
}

stop() {
    echo "Stopping $DESC: $NAME"
    if [ -f $PIDFILE ]; then
        start-stop-daemon -K -q -p $PIDFILE
        rm -f $PIDFILE
    fi
    [ $? = 0 ] && echo "OK" || echo "FAIL"
}

restart() {
    stop
    start
}

status() {
    if [ -f $PIDFILE ]; then
        echo "$NAME is running."
    else
        echo "$NAME is not running."
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    status)
        status
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit 0
